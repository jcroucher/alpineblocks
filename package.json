{
  "name": "alpineblocks",
  "version": "1.0.0",
  "description": "A lightweight, extensible block-based content editor built with Alpine.js",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "targets": {
    "main": {
      "outputFormat": "commonjs"
    },
    "module": {
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "dev": "parcel examples/index.html --dist-dir ./dist-dev",
    "build": "parcel build --target main --target module",
    "build:lib": "parcel build --target main --target module",
    "build:examples": "parcel build examples/index.html --public-url ./",
    "start": "parcel examples/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "alpine",
    "alpinejs",
    "editor",
    "block-editor",
    "content-editor",
    "wysiwyg",
    "drag-drop",
    "javascript"
  ],
  "author": "John Croucher <john@jcroucher.com>",
  "license": "MIT",
  "homepage": "https://github.com/jcroucher/alpineblocks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcroucher/alpineblocks.git"
  },
  "bugs": {
    "url": "https://github.com/jcroucher/alpineblocks/issues"
  },
  "peerDependencies": {
    "alpinejs": "^3.14.1"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/helper-plugin-utils": "^7.27.1",
    "@babel/preset-env": "^7.25.4",
    "@parcel/optimizer-terser": "^2.15.4",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.4",
    "alpinejs": "^3.14.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "parcel-bundler": "^1.12.5",
    "wait-on": "^8.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/index.css"
  },
  "types": "./dist/index.d.ts"
}
